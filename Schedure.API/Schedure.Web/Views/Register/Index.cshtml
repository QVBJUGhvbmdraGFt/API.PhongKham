@model IEnumerable<SchedureDTO.RegisterDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>
            MÃ ĐĂNG KÍ
        </th>
        <th>
            BÁC SĨ
        </th>
        <th>
            THÔNG TIN ĐĂNG KÍ
        </th>
        <th>
            NGÀY ĐĂNG KÍ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDRegister)
            </td>
            <td>
                <img style="max-height: 100px" src="@item.LichLamViec.Doctor.Avatar" />
                <h4>@Html.DisplayFor(modelItem => item.LichLamViec.Doctor.FullName)</h4>
            </td>
            <td>
                <ul>
                    <li>Thời gian: @Html.DisplayFor(modelItem => item.LichLamViec.TimeSlot.HourStart) - @Html.DisplayFor(modelItem => item.LichLamViec.TimeSlot.HourEnd)</li>
                    <li>Phòng khám: @Html.DisplayFor(modelItem => item.LichLamViec.Doctor.PhongKham.Name)</li>
                    <li>Chuyên khoa: @Html.DisplayFor(modelItem => item.LichLamViec.Doctor.PhongKham.ChuyenKhoa.Name)</li>
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @switch (item.Status)
                {
                    case "CONFIRM":
                        <b>Chờ duyệt</b>
                        <button onclick="cancleRegister(this,@item.IDRegister)" class="btn btn-warning">Hủy</button>
                        break;
                    case "CANCLE":
                        <b>Đã hủy</b>
                        break;
                    case "DONE":
                        <b>Đã khám</b>
                        break;
                    case "CHOKHAM":
                        <b>Chờ khám</b>
                        break;
                    default:
                        <b>@item.Status</b>
                        break;
                }
            </td>
        </tr>
    }
</table>

<script>
    function cancleRegister(target, id) {
        if (confirm("Bạn có muốn hủy đăng kí?")) {
            $.ajax({
                url: '@Url.Action("Cancle")',
                type: 'POST',
                data: { id: id },
                success: function (d) {
                    $(target).closest("tr").find(".Status").html("CANCLE");
                    $(target).closest("td").html("<b>Đã hủy</b>");
                }
            });
        }
    }
</script>